---
apiVersion: v1
kind: Secret
metadata:
  name: {{ repo_secret_name }}
  namespace: argocd
  labels:
    argocd.argoproj.io/secret-type: repository
stringData:
  type: git
  project: {{ repo_project }}
  name: {{ repo_secret_name }}
  url: {{ repo_url }}
  sshPrivateKey: |
    {{ repo_private_key  | indent(width=4) }}